<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

<!--    <androidx.constraintlayout.widget.ConstraintLayout-->
<!--        android:id="@+id/ctl_temp"-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="match_parent">-->

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_maincard_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@color/main_black"
            app:layout_constraintTop_toTopOf="parent"
            android:padding="2dp"
            tools:background="@drawable/bg_right_null_black_radius_2">

            <ImageView
                android:id="@+id/iv_main_card_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginHorizontal="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginBottom="4dp"
                android:background="@color/main_black"
                android:padding="2dp"
                android:scaleType="fitXY"
                app:layout_constraintDimensionRatio="227:323"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                tools:src="@drawable/dummy_img_test" />

            <TextView
                android:id="@+id/tv_main_card_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:layout_marginTop="5dp"
                android:paddingBottom="12dp"
                android:fontFamily="@font/pretendard_bold"
                android:textColor="@color/real_black"
                android:textSize="16sp"
                app:layout_constraintTop_toBottomOf="@id/iv_main_card_image"
                app:layout_constraintStart_toStartOf="parent"
                tools:text="힘이 들 땐 하늘을 봐..." />

        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>

