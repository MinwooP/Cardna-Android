<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="248dp"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_white_1_10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <Button
                android:id="@+id/tv_dialog_report_reason_one"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:fontFamily="@font/pretendard_semibold"
                android:includeFontPadding="false"

                android:text="욕설/비하 콘텐츠"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <Button
                android:id="@+id/tv_dialog_report_reason_two"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_semibold"
                android:includeFontPadding="false"
                android:text="허위 콘텐츠"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_dialog_report_reason_one"
                app:layout_constraintStart_toStartOf="@+id/tv_dialog_report_reason_one"
                app:layout_constraintTop_toBottomOf="@+id/tv_dialog_report_reason_one" />

            <Button
                android:id="@+id/tv_dialog_report_reason_three"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_semibold"
                android:includeFontPadding="false"
                android:text="부적절한 콘텐츠"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_dialog_report_reason_two"
                app:layout_constraintStart_toStartOf="@+id/tv_dialog_report_reason_two"
                app:layout_constraintTop_toBottomOf="@+id/tv_dialog_report_reason_two" />

            <Button
                android:id="@+id/tv_dialog_report_reason_four"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_semibold"
                android:includeFontPadding="false"
                android:text="성적 콘텐츠"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_dialog_report_reason_three"
                app:layout_constraintStart_toStartOf="@+id/tv_dialog_report_reason_three"
                app:layout_constraintTop_toBottomOf="@+id/tv_dialog_report_reason_three" />

            <View
                android:id="@+id/view_dialog"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginTop="12dp"
                android:background="@color/black"
                android:fontFamily="@font/pretendard_semibold"
                app:layout_constraintTop_toBottomOf="@+id/tv_dialog_report_reason_four" />

            <Button
                android:id="@+id/tv_dialog_report_cancel"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/pretendard_semibold"
                android:includeFontPadding="false"
                android:text="취소"
                android:textColor="@color/black"
                android:textSize="14sp"
                app:layout_constraintEnd_toEndOf="@+id/tv_dialog_report_reason_one"
                app:layout_constraintStart_toStartOf="@+id/tv_dialog_report_reason_one"
                app:layout_constraintTop_toBottomOf="@+id/view_dialog" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>
