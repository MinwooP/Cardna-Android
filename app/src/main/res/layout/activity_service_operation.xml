<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/black"
        tools:context="org.cardna.presentation.ui.setting.view.PrivacyPolicyActivity">

        <TextView
            android:id="@+id/tv_privacy_policy_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/privacy_policy_title"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:text="@string/policy_text_title" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="45dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_privacy_policy_title">

            <TextView
                android:id="@+id/tv_privacy_policy_about"
                android:layout_width="wrap_content"
                style="@style/privacy_policy_about"
                android:layout_height="wrap_content"
                android:text="@string/policy_text" />
        </ScrollView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>